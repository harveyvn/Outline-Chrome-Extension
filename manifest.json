{
	"name": "Outline Chromium Extension",
	"version": "1.0",
	"description": "Build a Chromium Extension for Outline Service!",
	"permissions": ["activeTab", "storage", "contextMenus"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"16": "images/light.png",
			"32": "images/light.png",
			"48": "images/light.png"
		},
		"default_title": "Outline"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["toggleIcon.js"]
		}
	],
	"icons": {
		"16": "images/light.png",
		"32": "images/light.png",
		"48": "images/light.png"
	},
	"options_page": "options.html",
	"manifest_version": 2
}
